<launch>

    <node pkg="nodelet" type="nodelet" name="dpm" args="standalone dpm_detector/DPMNodelet" output="screen">
        <remap from="/dpm/image" to="/narrow_stereo/left/image_rect" />
        <param name="code_path" value="$(find dpm_detector)/scripts" />
        <param name="models_path" value="$(find dpm_detector)/models" />
        <rosparam>
            use_rois: False
            recognition_threshold: 0.2
            model: coke
        </rosparam>
    </node>

    <node pkg="rein" type="detection_displayer" name="detection_displayer" >
        <remap from="/image" to="/narrow_stereo/left/image_rect" />
        <remap from="/detections" to="/dpm/detections" />
    </node>
</launch>
