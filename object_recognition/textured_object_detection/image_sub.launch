<launch>
  <arg name="directory" default="/home/alex/temp/" />
  <arg name="textured" default="true" />
  <arg name="prosilica" default="true" />
  <node pkg="textured_object_detection" type="is" name="is" output="screen">
      <remap from="ci_left_in" to="/narrow_stereo/left/camera_info"/>
      <remap from="ci_right_in" to="/narrow_stereo/right/camera_info"/>
      
      <remap from="im_left_in" to="/narrow_stereo/left/image_raw"/>
      <remap from="im_right_in" to="/narrow_stereo/right/image_raw"/>
      
      <remap from="imt_left_in" to="/narrow_stereo_textured/left/image_raw"/>
      <remap from="imt_right_in" to="/narrow_stereo_textured/right/image_raw"/>
      
      <remap from="im_pro_in" to="/prosilica/image_color"/>
      <remap from="ci_pro_in" to="/prosilica/camera_info"/>

      <remap from="dir" to="$(arg directory)" />
  </node>
  <env name="ROS_NAMESPACE" value="/prosilica"></env>
  <node pkg="image_proc" type="image_proc" name="image_proc" output="screen">
  </node>
  <param name="have_textured" value="$(arg textured)" />
  <param name="have_prosilica" value="$(arg prosilica)" />
  
</launch>
