libsoci:
  ubuntu: 
    '10.04': libsoci-core-gcc-dev libsoci-postgresql-gcc libsoci-sqlite3-gcc
    '9.10': libsoci-core-gcc-dev libsoci-postgresql-gcc libsoci-sqlite3-gcc
    '9.04': |
      if [ ! -f /opt/ros/lib/libsoci_core-gcc-3_0.a ] ; then
        mkdir -p ~/ros/ros-deps
        cd ~/ros/ros-deps
        wget --tries=10 http://pr.willowgarage.com/downloads/soci-3.0.tar.gz
        tar xzf soci-3.0.tar.gz
        cd soci-3.0/src
        ./configure --prefix=/opt/ros --enable-backend-postgresql=yes --enable-backend-sqlite3=yes
        make
        sudo make install
      fi
libpq-dev:
  ubuntu: libpq-dev

psycopg2:
  ubuntu: python-psycopg2

python-vtk:
  ubuntu: python-vtk
